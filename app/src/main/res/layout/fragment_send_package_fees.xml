<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragment.sendpackage.SendPackageFeesFragment">

    <TextView android:id="@+id/title_fee"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textColor="@color/highlight"
        android:textFontWeight="@integer/bold"
        android:text="@string/send_package_fees" />

    <androidx.recyclerview.widget.RecyclerView
        android:layout_marginTop="20dp"
        android:visibility="visible"
        android:id="@+id/shipping_options"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title_fee"
        tools:listitem="@layout/package_information"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager">
    </androidx.recyclerview.widget.RecyclerView>

    <TextView android:id="@+id/title_payment"
        app:layout_constraintTop_toBottomOf="@id/shipping_options"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="25dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textColor="@color/highlight"
        android:textFontWeight="@integer/bold"
        android:text="@string/send_package_payment_method" />

    <include
        layout="@layout/chosen_payment_method"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/title_payment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</androidx.constraintlayout.widget.ConstraintLayout>
</layout>